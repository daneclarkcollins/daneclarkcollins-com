doctype html
block vars
  - var bodyclass = null
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=contents.css['main.styl'].url)
      link(rel='icon', type='image/png', href='/favicon.png')
      block metatags
  body(class="#{bodyclass} nav-closed")
    .nav
      h3.nav-title= 'Menu'
      a.nav-close(href="#")
        span.hidden Close
      ul
        li.nav-home.nav-current(role="presentation")
          a(href="/")= 'Home / Blog'
        li.nav-fiction(role="presentation")
          a(href="http://amzn.to/1rqrcdl", target="_blank")= 'Fiction'
        li.nav-fiction(role="presentation")
          a(href="http://www.sagaborn.com/games/", target="_blank")= 'Gaming'
        li.nav-music(role="presentation")
          a(href="http://www.inhumangenome.com/", target="_blank")= 'Music'
      a.subscribe-button.icon-feed(href="/feed.xml")= 'Subscribe'
    span.nav-cover
    .site-wrapper
      block pagetop
        header.header(style="background: linear-gradient(to bottom, rgba(60,44,44,.2) 0%, rgba(22,22,22,.2) 100%), url(/img/backgrounds/home_background.jpg); background-size: cover")
          div.content-wrap
            a.menu-button.headroom.icon-menu(href="#")
                span.word= 'Menu'
            block header
              div.logo
                h1
                  a(href=locals.url)= locals.name
                p.description= locals.description
      div#content
        div.content-wrap
          block content
      footer
        div.content-wrap
          block footer
            section.about
              !=contents['about.md'].html
            section.copy
              p &copy; #{ new Date().getFullYear() } #{ locals.owner }
                //- please leave the "powered by" if you use the design
        script(type='text/javascript', src='https://code.jquery.com/jquery-1.12.0.min.js')
        script(type='text/javascript', src=contents.js['scripts.js'].url)
